<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:background="@drawable/rounded_card2"
android:layout_margin="5dp"
android:layout_width="match_parent"
android:layout_height="80dp">

<TextView
android:id="@+id/order_name"
android:layout_width="85dp"
android:layout_height="39dp"
android:text="Order ID :"
android:textSize="18sp"
android:textStyle="bold"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.09"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintVertical_bias="0.508" />

<TextView
android:id="@+id/order_id"
android:layout_width="91dp"
android:layout_height="29dp"
android:layout_marginEnd="196dp"
android:textSize="18sp"
android:textStyle="bold"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.147"
app:layout_constraintStart_toEndOf="@+id/order_name"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintVertical_bias="0.509" />

<TextView
android:id="@+id/Order_status"
android:layout_width="90dp"
android:layout_height="30dp"
android:layout_marginStart="8dp"
android:textSize="18sp"
android:textStyle="bold"
android:textColor="@color/Blue"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.082"
app:layout_constraintStart_toEndOf="@+id/order_id"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintVertical_bias="0.52" />

<LinearLayout
android:id="@+id/linearLayout2"
android:layout_width="68dp"
android:layout_height="85dp"
android:orientation="vertical"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.923"
app:layout_constraintStart_toEndOf="@+id/Order_status"
app:layout_constraintTop_toTopOf="parent">

<ImageView
android:id="@+id/edit_pending_orderView"
android:layout_width="match_parent"
android:layout_height="40dp"
android:layout_margin="1dp"
android:src="@drawable/ic_editicon_black" />

<ImageView
android:id="@+id/delete_pending_order"
android:layout_width="match_parent"
android:layout_height="40dp"
android:layout_margin="1dp"
android:src="@drawable/ic_deleteicon_black" />
</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>